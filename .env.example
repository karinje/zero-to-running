# Zero-to-Running Developer Environment Configuration
# Copy this file to .env and customize as needed
# DO NOT commit .env to version control

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=wander_dev
POSTGRES_USER=wander_user
POSTGRES_PASSWORD=dev_password_change_in_prod

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# =============================================================================
# Backend API Configuration
# =============================================================================
BACKEND_PORT=4000
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:4000
VITE_APP_NAME=Wander Dev Environment

# =============================================================================
# Development Options
# =============================================================================
# Enable hot reload for frontend (default: true)
HOT_RELOAD=true

# Enable debug mode for Node.js (default: false)
# When enabled, exposes debug port 9229
ENABLE_DEBUG=false

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker network name (default: wander-network)
DOCKER_NETWORK=wander-network

# Docker compose project name (default: wander)
COMPOSE_PROJECT_NAME=wander

# =============================================================================
# Resource Limits (Optional - adjust based on your machine)
# =============================================================================
# PostgreSQL memory limit (default: 512m)
POSTGRES_MEMORY_LIMIT=512m

# Redis memory limit (default: 256m)
REDIS_MEMORY_LIMIT=256m

# Backend memory limit (default: 512m)
BACKEND_MEMORY_LIMIT=512m

# Frontend memory limit (default: 256m)
FRONTEND_MEMORY_LIMIT=256m
